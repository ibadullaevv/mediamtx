# MediaMTX muhim ma'lumotlar uchun
# Bu faylni .env ga nusxalang va o'zgartiring

# Docker container nomi
CONTAINER_NAME=mediamtx

# Port sozlamalari (kerak bo'lsa o'zgartiring)
RTSP_PORT=8554
RTMP_PORT=1935
HLS_PORT=8888
API_PORT=9997

# Autentifikatsiya ma'lumotlari (albatta o'zgartiring!)
ADMIN_USER=admin
ADMIN_PASSWORD=changeThisPassword

# HLS sozlamalari
HLS_SEGMENT_COUNT=7
HLS_SEGMENT_DURATION=1

# Log darajasi (debug, info, warn, error)
LOG_LEVEL=info

# Server IP manzili (kerak bo'lsa o'zgartiring)
SERVER_PUBLIC_IP=localhost

# Kamera ma'lumotlari (misol)
# CAMERA1_NAME=entrance_camera
# CAMERA1_URL=rtsp://user:pass@192.168.1.101:554/stream1
# CAMERA2_NAME=parking_camera
# CAMERA2_URL=rtsp://user:pass@192.168.1.102:554/stream2